        <string>useCameraBookmark(quest_oupost_cam_12);</string>
        <string>dlgSetZoom(20);</string>
        <string>aod.quest_teronMine_trapInterior = true;</string>
      </onLoadScripts>
      <answers>
        <dlgAnsw>
          <text>Go in, everyone's waiting for you.</text>
          <def_link>4</def_link>
