        <string>if(aod.quest_ameriusReward == false) {rwd_quest(MDN_Amerius_01); aod.quest_ameriusReward = true;}</string>
      </onLoadScripts>
      <answers>
        <dlgAnsw>
          <text>“Don't mention it.” Leave.</text>
          <def_link>4766</def_link>
          <checkOnAppear />
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
        </dlgAnsw>
        <dlgAnsw>
