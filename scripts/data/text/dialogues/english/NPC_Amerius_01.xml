      </onLoadScripts>
      <answers>
        <dlgAnsw>
          <text>“We'll see.” Leave.</text>
          <def_link>4755</def_link>
          <checkOnAppear />
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
        </dlgAnsw>
      </answers>
      <UID>4760</UID>
    </dlgPart>
    <dlgPart>
      <portrait />
      <speaker_name />
      <npc_text>“Pay you with what? I don’t have any money,” says the man angrily.</npc_text>
      <onLoadScripts />
      <answers>
        <dlgAnsw>
          <text>“You’re a prospector. Surely, you have a trinket or two stashed away.”</text>
          <def_link>4754</def_link>
          <checkOnAppear />
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
        </dlgAnsw>
      </answers>
      <UID>4753</UID>
    </dlgPart>
