            <string>aod.npc_carrinas_dead</string>
            <string>dlgGetRep(bodycount) &lt; 5</string>
            <string>dlgGetRep(guards) &lt; 0</string>
            <string>dlgGetRep(loyalty) &lt; 0</string>
