        <dlgAnsw>
          <text>"I want to join the Imperial Guards."</text>
          <def_link>1</def_link>
          <checkOnAppear>pcHasFaction() == false &amp;&amp; aod.mdn_finished == 0 &amp;&amp; aod.pc_exMember_guards == 0</checkOnAppear>
