            <int>5</int>
            <int>4</int>
            <int>8</int>
            <int>7</int>
          </linksOnClick>
          <scriptsOnClick />
        </dlgAnsw>
        <dlgAnsw>
          <text>Leave.</text>
          <def_link>3</def_link>
          <checkOnAppear />
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
