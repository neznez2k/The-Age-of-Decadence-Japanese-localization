      </onLoadScripts>
      <answers>
        <dlgAnsw>
          <text>"Just show me what you have."</text>
          <def_link>8</def_link>
          <checkOnAppear />
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
        </dlgAnsw>
        <dlgAnsw>
          <text>[alchemy success]“Do you have any blood mushrooms?”</text>
