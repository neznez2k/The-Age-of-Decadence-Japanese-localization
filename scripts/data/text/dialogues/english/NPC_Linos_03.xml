          <checkOnAppear>aod.ending_mdn_faction_mg_success</checkOnAppear>
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
        </dlgAnsw>
        <dlgAnsw>
          <text>“He threw me out.”</text>
