          <def_link>2</def_link>
          <checkOnAppear />
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
        </dlgAnsw>
      </answers>
      <UID>13</UID>
    </dlgPart>
    <dlgPart>
      <portrait />
      <speaker_name />
      <npc_text>[success]“Everyone kneels to someone.”</npc_text>
      <onLoadScripts />
      <answers>
        <dlgAnsw>
          <text>“You can kneel to the Gods if you really want to. They won’t mind.”</text>
          <def_link>15</def_link>
