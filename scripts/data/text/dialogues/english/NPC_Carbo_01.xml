      </answers>
      <UID>6511</UID>
    </dlgPart>
    <dlgPart>
      <portrait />
      <speaker_name />
      <npc_text>“Got lost?”</npc_text>
      <onLoadScripts>
        <string>dlgTeleportToMarker(TM_DLG_Carbo_NPC, 8011);</string>
        <string>dlgTeleportToMarker(TM_DLG_Carbo_PC);</string>
      </onLoadScripts>
