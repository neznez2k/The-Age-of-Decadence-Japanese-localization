      </onLoadScripts>
      <answers />
      <UID>66</UID>
    </dlgPart>
    <dlgPart>
      <portrait />
      <speaker_name />
      <npc_text>END</npc_text>
      <onLoadScripts>
        <string>dlgFinish();</string>
        <string>dlgFadeShortToThisPart();</string>
        <string>setRtsCam();</string>
      </onLoadScripts>
      <answers />
      <UID>69</UID>
    </dlgPart>
    <dlgPart>
      <portrait />
      <speaker_name />
      <npc_text>“Certainly. Let me make the arrangements...”</npc_text>
      <onLoadScripts />
      <answers>
        <dlgAnsw>
          <text>Wait for the servant and go see what Levir’s been up to.</text>
          <def_link>68</def_link>
          <checkOnAppear />
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
        </dlgAnsw>
      </answers>
      <UID>67</UID>
    </dlgPart>
    <dlgPart>
      <portrait />
      <speaker_name />
      <npc_text>END - go to the catacombs</npc_text>
      <onLoadScripts>
        <string>dlgFinish();</string>
        <string>aod.quest_HealingMachine_fromLorenza = true;</string>
