    <dlgPart>
      <portrait />
      <speaker_name>Guard</speaker_name>
      <npc_text>“Stay out of trouble, farm &lt;boy/girl&gt;.”</npc_text>
      <onLoadScripts>
        <string>dlgChangeMoney(-500);</string>
      </onLoadScripts>
      <answers>
        <dlgAnsw>
          <text>Leave.</text>
          <def_link>20</def_link>
