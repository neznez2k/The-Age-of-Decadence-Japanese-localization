          <def_link>17</def_link>
          <checkOnAppear>aod.npc_levir_dead</checkOnAppear>
          <checksOnClick>
            <string>(aod.persuasion + aod.trading) &gt;= 8</string>
          </checksOnClick>
          <linksOnClick>
            <int>23</int>
          </linksOnClick>
          <scriptsOnClick />
        </dlgAnsw>
      </answers>
