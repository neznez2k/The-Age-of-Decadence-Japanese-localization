        <string>dlgRemoveItem(1600, 1);</string>
        <string>aod.hangar_panel_powered = true;</string>
      </onLoadScripts>
      <answers>
        <dlgAnsw>
          <text>Open the hatch door.</text>
          <def_link>4</def_link>
          <checkOnAppear />
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
        </dlgAnsw>
        <dlgAnsw>
          <text>Leave.</text>
          <def_link>1</def_link>
          <checkOnAppear />
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
