    </dlgPart>
    <dlgPart>
      <portrait />
      <speaker_name />
      <npc_text>"What are you waiting for?"</npc_text>
      <onLoadScripts>
        <string>dlgCam(15, 40, 6, 8005);</string>
        <string>dlgTeleportToMarker(TM_DLG_Paullus_PC);</string>
      </onLoadScripts>
      <answers>
        <dlgAnsw>
          <text>Travel to the temple.</text>
          <def_link>9327</def_link>
          <checkOnAppear />
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
        </dlgAnsw>
        <dlgAnsw>
          <text>Check your gear one last time.</text>
          <def_link>9325</def_link>
          <checkOnAppear />
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
        </dlgAnsw>
      </answers>
      <UID>9326</UID>
    </dlgPart>
    <dlgPart>
      <portrait />
      <speaker_name />
      <npc_text>END - leave for the trip</npc_text>
      <onLoadScripts>
        <string>dlgFinish();</string>
        <string>dlgFadeLongToThisPart();</string>
        <string>switchMission("END_DesertMaadoran.mis");</string>
      </onLoadScripts>
      <answers />
