    <dlgPart>
      <portrait />
      <speaker_name />
      <npc_text>“Ready for some work?” asks Miltiades, rubbing his hands together.</npc_text>
      <onLoadScripts />
      <answers>
        <dlgAnsw>
          <text>“You mean the zealots?”</text>
          <def_link>9065</def_link>
          <checkOnAppear />
