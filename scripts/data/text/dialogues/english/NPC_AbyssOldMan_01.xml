          <scriptsOnClick />
        </dlgAnsw>
        <dlgAnsw>
          <text>“I’ll think about it.”</text>
          <def_link>4432</def_link>
          <checkOnAppear>aod.npc_abyssOldMan_gotAmulet == false</checkOnAppear>
          <checksOnClick />
