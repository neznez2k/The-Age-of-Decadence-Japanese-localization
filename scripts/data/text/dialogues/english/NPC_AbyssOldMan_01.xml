        <string>aod.npc_abyssOldMan_met = true;</string>
        <string>dlgTeleportToMarker(TM_DLG_OldMan);</string>
        <string>dlgCam(265, 40, 7, 4910);</string>
      </onLoadScripts>
      <answers>
        <dlgAnsw>
          <text>“What is this junk?”</text>
          <def_link>4422</def_link>
          <checkOnAppear />
          <checksOnClick />
