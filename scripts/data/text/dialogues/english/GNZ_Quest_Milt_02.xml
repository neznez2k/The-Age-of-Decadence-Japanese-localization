    <dlgPart>
      <portrait />
      <speaker_name />
      <npc_text>“That's all I ask,” says Miltiades, happy as a pig.</npc_text>
      <onLoadScripts />
      <answers>
        <dlgAnsw>
          <text>Take him to Hector.</text>
          <def_link>20</def_link>
