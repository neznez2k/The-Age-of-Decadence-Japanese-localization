        <string>dlgTeleportToMarker(TM_DLG_Rusty);</string>
        <string>dlgCam(280, 45, 6, 5055);</string>
      </onLoadScripts>
      <answers>
        <dlgAnsw>
          <text>[thief]“I’m with the guild.”</text>
          <def_link>2</def_link>
          <checkOnAppear>isQuestAdded(TG5) &amp;&amp; isQuestComplete(TG5) == 0</checkOnAppear>
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
