        <string>aod.npc_mdnTraderArmor_met = true;</string>
        <string>dlgTeleportToMarker(TM_DLG_TraderArmor);</string>
        <string>dlgCam(15, 40, 7, 6108);</string>
      </onLoadScripts>
      <answers>
        <dlgAnsw>
          <text>Browse the wares.</text>
          <def_link>479</def_link>
