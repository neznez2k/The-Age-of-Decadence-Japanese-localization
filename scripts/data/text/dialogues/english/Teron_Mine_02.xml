        <string>useCameraBookmark(quest_outpost_cam_13);</string>
        <string>dlgTeleportToMarker(TM_MineDoorOutside_PC_04);</string>
      </onLoadScripts>
      <answers>
        <dlgAnsw>
          <text>Finish it now.</text>
          <def_link>7</def_link>
          <checkOnAppear />
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
        </dlgAnsw>
        <dlgAnsw>
