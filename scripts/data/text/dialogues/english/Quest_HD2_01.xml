        <string>aod.quest_hd2_CadoHelp = true;</string>
        <string>addQuest(HD2a);</string>
        <string>aod.quest_hd2a_phase1 = true;</string>
      </onLoadScripts>
      <answers>
        <dlgAnsw>
          <text>"Might not be enough."</text>
          <def_link>4</def_link>
          <checkOnAppear>aod.quest_hd2_askIdeas == false</checkOnAppear>
          <checksOnClick />
          <linksOnClick />
          <scriptsOnClick />
