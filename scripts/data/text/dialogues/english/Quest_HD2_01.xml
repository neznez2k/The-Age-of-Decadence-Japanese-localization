    <dlgPart>
      <portrait />
      <speaker_name />
      <npc_text>"Do you have any better ideas?"</npc_text>
      <onLoadScripts>
        <string>aod.quest_hd2_askIdeas = true;</string>
      </onLoadScripts>
      <answers>
        <dlgAnsw>
